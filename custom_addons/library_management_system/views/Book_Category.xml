<?xml version="1.0" encoding="utf-8"?>


<odoo>
    <data>
        <record model="ir.ui.view" id="view_action_books_category_form">
            <field name="name">action.books.category.form</field>
            <field name="model">books.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="sequence"/>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_action_books_category_tree">
            <field name="name">action.books.category.tree</field>
            <field name="model">books.category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_category">
            <field name="name">Book Category</field>
            <field name="res_model">books.category</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>